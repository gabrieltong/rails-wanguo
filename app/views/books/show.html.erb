<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <td><%= model_class.human_attribute_name(:title) %>:</td>
    <td><%= @book.title %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:press) %>:</td>
    <td><%= @book.press %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:price) %>:</td>
    <td><%= @book.price %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:author) %>:</td>
    <td><%= @book.author %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:details) %>:</td>
    <td><%= @book.details %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:taobao) %>:</td>
    <td><%= @book.taobao %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:file) %>:</td>
    <td><%= image_tag @book.file.url %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:published_at) %>:</td>
    <td><%= @book.published_at %></td>
  </tr>
</table>

<div class="form-actions">
  <%= link_to t('back', :default => t("helpers.links.back")),
              books_path, :class => 'btn'  %>
  <%= link_to t('edit', :default => t("helpers.links.edit")),
              edit_book_path(@book), :class => 'btn' %>
  <%= link_to t('destroy', :default => t("helpers.links.destroy")),
              book_path(@book),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
