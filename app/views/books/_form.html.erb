<%= simple_form_for @book, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title,:input_html=>{:class=>'span6'} %>
  <%= f.input :press ,:input_html=>{:class=>'span6'}%>
  <%= f.input :author ,:input_html=>{:class=>'span6'}%>
  <%= f.input :price,:input_html=>{:class=>'span6'}%>
  <%= f.input :taobao,:as=>:string ,:input_html=>{:class=>'span6'}%>
  <%= f.input :file ,:input_html=>{:class=>'span6'}%>
  <%= f.input :details,:input_html=>{:rows=>5} ,:input_html=>{:class=>'span6'}%>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn' %>
  </div>
<% end %>
