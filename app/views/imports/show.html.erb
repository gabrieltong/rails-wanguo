<%- model_class = Import -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <td><strong><%= model_class.human_attribute_name(:title) %>:</strong></td>
    <td><%= @import.title %></td>
  </tr>
  <tr>
    <td><strong><%= model_class.human_attribute_name(:state) %>:</strong></td>
    <td><%= @import.state %></td>
  </tr>
  <tr>
    <td><strong><%= model_class.human_attribute_name(:file_file_name) %>:</strong></td>
    <td><%= @import.file_file_name %></td>
  </tr>
  <tr>
    <td><strong><%= model_class.human_attribute_name(:file_content_type) %>:</strong></td>
    <td><%= @import.file_content_type %></td>
  </tr>
  <tr>
    <td><strong><%= model_class.human_attribute_name(:file_file_size) %>:</strong></td>
    <td><%= @import.file_file_size %></td>
  </tr>
  <tr>
    <td><strong><%= model_class.human_attribute_name(:file_updated_at) %>:</strong></td>
    <td><%= @import.file_updated_at %></td>
  </tr>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              imports_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_import_path(@import), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              import_path(@import),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
