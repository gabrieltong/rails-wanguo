<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <td><%= model_class.human_attribute_name(:title) %>:</strong></td>
    <td><%= @question.title %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:score) %>:</strong></td>
    <td><%= @question.score %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:num) %>:</strong></td>
    <td><%= @question.num %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:state) %>:</strong></td>
    <td><%= @question.state %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:description) %>:</strong></td>
    <td><%= @question.description %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:answer) %>:</strong></td>
    <td><%= @question.answer %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:choices) %>:</strong></td>
    <td><%= @question.choices %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:description3) %>:</strong></td>
    <td><%= @question.description3 %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:choices_description) %>:</strong></td>
    <td><%= @question.choices_description %></td>
  </tr>
</table>

<div class="form-actions">
  <%= link_to t('back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn'  %>
  <%= link_to t('edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn' %>
  <%= link_to t('destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
