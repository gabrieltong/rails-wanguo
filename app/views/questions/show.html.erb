<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @question.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score) %>:</strong></dt>
  <dd><%= @question.score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num) %>:</strong></dt>
  <dd><%= @question.num %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @question.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @question.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:answer) %>:</strong></dt>
  <dd><%= @question.answer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choices) %>:</strong></dt>
  <dd><%= @question.choices %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description3) %>:</strong></dt>
  <dd><%= @question.description3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choices_description) %>:</strong></dt>
  <dd><%= @question.choices_description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn'  %>
  <%= link_to t('edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn' %>
  <%= link_to t('destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
