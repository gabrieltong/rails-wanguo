<%- model_class = School -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <td><%= model_class.human_attribute_name(:title) %>:</strong></td>
    <td><%= @school.title %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:details) %>:</strong></td>
    <td><%= @school.details %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:url) %>:</strong></td>
    <td><%= @school.url %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:file) %>:</strong></td>
    <td><%= image_tag @school.file.url %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:city) %>:</strong></td>
    <td><%= @school.city %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:price) %>:</strong></td>
    <td><%= @school.price %></td>
  </tr>
  <tr>
    <td><%= model_class.human_attribute_name(:started_at) %>:</strong></td>
    <td><%= @school.started_at %></td>
  </tr>
</table>

<div class="form-actions">
  <%= link_to t('back', :default => t("helpers.links.back")),
              schools_path, :class => 'btn'  %>
  <%= link_to t('edit', :default => t("helpers.links.edit")),
              edit_school_path(@school), :class => 'btn' %>
  <%= link_to t('destroy', :default => t("helpers.links.destroy")),
              school_path(@school),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
