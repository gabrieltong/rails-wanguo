<%- model_class = School -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @school.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
  <dd><%= @school.details %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @school.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file_file_name) %>:</strong></dt>
  <dd><%= @school.file_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file_content_type) %>:</strong></dt>
  <dd><%= @school.file_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file_file_size) %>:</strong></dt>
  <dd><%= @school.file_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file_updated_at) %>:</strong></dt>
  <dd><%= @school.file_updated_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @school.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @school.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:started_at) %>:</strong></dt>
  <dd><%= @school.started_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('back', :default => t("helpers.links.back")),
              schools_path, :class => 'btn'  %>
  <%= link_to t('edit', :default => t("helpers.links.edit")),
              edit_school_path(@school), :class => 'btn' %>
  <%= link_to t('destroy', :default => t("helpers.links.destroy")),
              school_path(@school),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
