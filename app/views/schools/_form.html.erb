<%= simple_form_for @school, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :city %>
  <%= f.input :price %>
  <%= f.input :started_at %>
  <%= f.input :url %>
  <%= f.input :file %>
  <%= f.input :details,:input_html=>{:rows=>5} %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                schools_path, :class => 'btn' %>
  </div>
<% end %>
