<%- model_class = Law -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @law.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @law.content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ancestry) %>:</strong></dt>
  <dd><%= @law.ancestry %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @law.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
  <dd><%= @law.category %></dd>
  <dt><strong><%= model_class.human_attribute_name(:blanks) %>:</strong></dt>
  <dd><%= @law.blanks %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ancestry_depth) %>:</strong></dt>
  <dd><%= @law.ancestry_depth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score) %>:</strong></dt>
  <dd><%= @law.score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sound_file_name) %>:</strong></dt>
  <dd><%= @law.sound_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sound_content_type) %>:</strong></dt>
  <dd><%= @law.sound_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sound_file_size) %>:</strong></dt>
  <dd><%= @law.sound_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sound_updated_at) %>:</strong></dt>
  <dd><%= @law.sound_updated_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @law.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:questions_number) %>:</strong></dt>
  <dd><%= @law.questions_number %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              laws_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_law_path(@law), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              law_path(@law),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
