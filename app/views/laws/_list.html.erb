<%- model_class = Law -%>
<% unless collection.blank?%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <!-- <th><%= model_class.human_attribute_name(:position) %></th>             -->
      <% if collection.first.state == 'node' %>
      <th><%= model_class.human_attribute_name(:blanks) %></th>
      <th><%= model_class.human_attribute_name(:score) %></th>
      <th><%= model_class.human_attribute_name(:sound) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:play_audio_count) %></th>
      <th><%= model_class.human_attribute_name(:open_blank_count) %></th>
      <% end %>
      <th><%=t 'actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% collection.each do |law| %>
      <tr>
        <td><%= link_to law.title, law_path(law) %></td>
        <!-- <td><%= law.position %></td> -->
        <% if collection.first.state == 'node' %>
        <td><%= law.blanks %></td>
        <td><%= law.score %></td>
        <td><%= law.sound %></td>
        <td><%= law.number %></td>
        <td><%= law.play_audio_count %></td>
        <td><%= law.open_blank_count %></td>
        <% end %>
        <td>
          <%= link_to '<i class="icon-arrow-up"></i>'.html_safe,
                      move_up_law_path(law), :class => 'btn  btn-mini' %>
          <%= link_to '<i class="icon-arrow-down"></i>'.html_safe,
                      move_down_law_path(law), :class => 'btn  btn-mini' %>                      
          <%= link_to t('edit', :default => t("helpers.links.edit")),
                      edit_law_path(law), :class => 'btn btn-mini' %>
          <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                      law_path(law),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>