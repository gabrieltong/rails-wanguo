<%- model_class = ImportError -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @import_error.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:import_id) %>:</strong></dt>
  <dd><%= @import_error.import_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('back', :default => t("helpers.links.back")),
              import_errors_path, :class => 'btn'  %>
  <%= link_to t('edit', :default => t("helpers.links.edit")),
              edit_import_error_path(@import_error), :class => 'btn' %>
  <%= link_to t('destroy', :default => t("helpers.links.destroy")),
              import_error_path(@import_error),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
