<%= simple_form_for @freelaw, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :ancestry %>
  <%= f.input :state %>
  <%= f.input :category %>
  <%= f.input :ancestry_depth %>
  <%= f.input :number %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                freelaws_path, :class => 'btn' %>
  </div>
<% end %>
